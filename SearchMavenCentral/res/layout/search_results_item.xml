<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/groupIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/latestVersionTextView"
        android:text="@string/groupId"
        android:textSize="20sp" android:ellipsize="end" android:maxWidth="100sp"/>

    <TextView
        android:id="@+id/artifactIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/groupIdTextView"
        android:layout_below="@+id/groupIdTextView"
        android:text="@string/artifactId"
        android:textSize="15sp" android:maxWidth="100sp"/>

    <TextView
        android:id="@+id/latestVersionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="@string/latestVersion"
        android:textColor="#0000FF"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/allVersionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/artifactIdTextView"
        android:layout_alignBottom="@+id/artifactIdTextView"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/groupIdTextView"
        android:text="@string/allVersions"
        android:textColor="#0000FF"
        android:textSize="15sp" />

</RelativeLayout>